@model IEnumerable<Sistema.Universitario.Web.Models.DisciplinaViewModel.DisciplinaViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Disciplinas";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-atom me-2"></i>@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-dark btn-sm">
                <i class="fas fa-plus-circle me-1"></i> Nova Disciplina
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (Model.Any())
            {
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Nome da Disciplina</th>
                            <th>Cursos Ofertados</th>
                            <th class="text-center" style="width: 150px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var disciplina in Model)
                        {
                            <tr>
                                <td class="fw-bold">@disciplina.Nome</td>
                                <td>
                                    @if (disciplina.NomeDosCursos.Any())
                                    {
                                        foreach (var curso in disciplina.NomeDosCursos)
                                        {
                                            <span class="badge bg-success me-1">@curso</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Nenhum</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@disciplina.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@disciplina.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Nenhuma disciplina cadastrada ainda. <a asp-action="Create">Clique aqui</a> para adicionar a primeira!
                </div>
            }
        </div>
    </div>
</div>