@model IEnumerable<Sistema.Universitario.Web.Models.AlunoViewModel.AlunoViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Alunos";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-user-graduate me-2"></i>@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle me-1"></i> Novo Aluno
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (Model.Any())
            {
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Matrícula</th>
                            <th>Nome do Aluno</th>
                            <th>Email</th>
                            <th>Turma</th>
                            <th class="text-center" style="width: 150px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var aluno in Model)
                        {
                            <tr>
                                <td>@aluno.Matricula</td>
                                <td class="fw-bold">@aluno.Nome</td>
                                <td>@aluno.Email</td>
                                <td>
                                    <span class="badge bg-info text-dark">@aluno.NomeDaTurma</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@aluno.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Nenhum aluno cadastrado ainda. <a asp-action="Create">Clique aqui</a> para adicionar o primeiro!
                </div>
            }
        </div>
    </div>
</div>