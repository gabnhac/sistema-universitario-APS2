@model IEnumerable<CursoViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Cursos";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-book-open me-2"></i>@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle me-1"></i> Novo Curso
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (Model.Any())
            {
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Nome do Curso</th>
                            <th>Disciplinas Associadas</th>
                            <th>Turmas Abertas</th>
                            <th class="text-center" style="width: 150px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var curso in Model)
                        {
                            <tr>
                                <td class="fw-bold">@curso.Nome</td>
                                <td>
                                    @if (curso.Disciplinas.Any())
                                    {
                                        foreach (var disciplina in curso.Disciplinas)
                                        {
                                            <span class="badge bg-primary me-1">@disciplina</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Nenhuma</span>
                                    }
                                </td>
                                <td>
                                    @if (curso.Turmas.Any())
                                    {
                                        foreach (var turma in curso.Turmas)
                                        {
                                            <span class="badge bg-info text-dark me-1">@turma</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Nenhuma</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@curso.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@curso.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    Nenhum curso cadastrado ainda. <a asp-action="Create">Clique aqui</a> para adicionar o primeiro!
                </div>
            }
        </div>
    </div>
</div>